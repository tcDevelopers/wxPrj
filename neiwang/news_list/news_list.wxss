.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}

.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #666;
}

.stv-container .tab-bar .tab-active {
  color: #2d80ff;
}

.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}

.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #2d80ff;
}

.stv-container .scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
  background: #e7eaef;
}

.stv-container .scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}

.stv-container .scroll-view .scroll-view-wrapper .one-scene {
  height: 100%;
}

.one-scene text {
  display: flex;
  justify-content: center;
  padding-top: 100rpx;
}

.news-list {
  margin: 20rpx;
  background-color: #fff;
  padding: 10rpx 20rpx;
}

.news-content {
  display: block;
  font-size: 35rpx;

}
.news-info{
  padding: 5rpx 10rpx 0 10rpx;
  display: flex;
  flex-flow: row;
}
.news-auth{
  color: #808080;
  text-align: left;
  font-size: 30rpx;
  padding-left: 10rpx;
  display: block;
  width: 50%;
}
.news-dt{
  color: #808080;
  text-align: right;
  font-size: 30rpx;
  padding-right: 10rpx;
  display: block;
  width: 50%;
}
.hover{
  background-color: #d3d3d3;
}